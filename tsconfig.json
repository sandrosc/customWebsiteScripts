{
  "compilerOptions": {
    "lib": ["es2015", "es2017", "dom"],
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
    // "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
